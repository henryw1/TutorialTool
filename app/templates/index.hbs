<div class="col-lg-12 col-sm-12">
  <div class="row cards">
    {{yield}}
    {{#if sesh.isLecturer}}
    <div class="col-md-3 accordion">
    {{control-panel}}
    <div class="panel panel-card accordion-group">
      <div class="panel-heading accordion-heading clickable">
        <div class="row">
          <div class="col-xs-12">
            <a href="#collapseTwo" class="accordion-toggle active " data-toggle="collapse" data-parent="#accordion2" id="login-form-link">Current Users</a>
          </div>

        </div>
        <hr>
      </div>
      <div id="collapseTwo" class="panel-body accordion-inner accordion-body collapse in">
        <div class="row">
          <div class="col-lg-12">
            <ul class="nav nav_ul navbar-nav col-lg-12">
              {{#each student as |item|}}
                <li class="dropdown col-lg-12">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{item.name}}<span class="glyphicon glyphicon-user pull-right"></span></a>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
    {{question-area}}
    <div class="col-md-9">
      <div class="panel panel-card">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-12">
              <a href="#" class="active" id="login-form-link">Johns answer</a>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              {{#each model as |post|}}
                {{response.data.title}}
              {{/each}}
              <!-- <textarea class="form-control col-lg-12" style="resize:vertical" id="comment" rows="5"></textarea> -->
            </div>
          </div>
        </div>
      </div>
    </div>
    {{else if sesh.isStudent}}
    <div class="col-md-12 accordion">
      <div class="panel panel-card accordion-group">
        <div class="panel-heading accordion-heading">
          <div class="row">
            <div class="col-xs-12">
              <a href="#collapse1" class="active accordion-toggle" data-toggle="collapse" data-parent="#accordion2" id="login-form-link">Question</a>
            </div>
          </div>
          <hr>
        </div>
        <div id="collapse1" class="accordion-body collapse panel-body accordion-inner in" aria-expanded="true">
          <div class="row">
            <div class="col-lg-12">
              {{#each lecturer as |q|}}
                <textarea class="form-control col-lg-12" style="resize:vertical" id="comment" rows="5" disabled> {{q.question}}</textarea>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- <div class="col-lg-12">
          <div id="tb-testimonial" class="testimonial testimonial-success-filled">
              <div class="testimonial-section">

            </div>

          </div>
  </div> -->

    <!--  This is for the students answer-->

    {{answer-area}}
    {{else}}
    <div class="loading col-lg-12" id="loading">
      <div class="row">
    <h3>WE ARE</h3>
<b>
  <span1>
    web developer<br />
    css cowboy<br />
    self-facilitating media node<br />
    box inside a box<br />
    part of the problem
    </span1>
</b>
</div>
<div class="row log">
  <h3>Please Login To Continue</h3>
</div>
</div>

    {{/if}}
  </div>
</div>

{{outlet}}
