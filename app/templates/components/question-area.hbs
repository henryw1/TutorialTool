<a href="#collapseq" title="Question" class="dropdown-toggle fab button1 btn btn-success btn-circle btn-lg " data-toggle="tooltip" data-placement="right" title="question"><i class="fa fa-times"></i></a>

<!-- <a href="#collapseExample" class="dropdown-toggle btn btn-success btn-circle btn-lg" data-toogle="collapse" ></a> -->
<div class="col-md-9 accordion">
  <div class="panel panel-card accordion-group collapse1" id="collapseq">
    <div class="row">
       <div class="col-xs-6">
         <div class="range range-success">
           <input type="range" name="range" min="1" max="100" value="50" onchange="rangeSuccess.value=value">
           <output id="rangeSuccess">50</output>
         </div>
       </div>
       <ul>
         <li><a href="#"> <span class="fa fa-expand"></span></a></li>

     </ul>
     </div>
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-12">
          <div class="input-group col-lg-12">
            {{input type="text" name="title" id="title" tabindex="1" class="form-control" value=title placeholder="Question Title"}}
            <span class="input-group-addon success"><span class="fa fa-font"></span></span>
          </div>
          <!-- <a href="#collapseOne" class="active accordion-toggle" data-toggle="collapse" data-parent="#accordion2" id="login-form-link">New Question</a> -->
        </div>
      </div>
      <hr>
    </div>
    <div id="collapseOne" class="accordion-body collapse panel-body accordion-inner in" aria-expanded="true">
      <div class="row">
        <div class="col-lg-12">
          {{ textarea name="question" id="question" class="form-control col-lg-12" value=question namestyle="resize:vertical" rows="5" placeholder="New Question"}}

          <!-- <textarea class="form-control col-lg-12" name="quesion" id="question" namestyle="resize:vertical" id="comment" value=question rows="5"></textarea> -->
        </div>
      </div>
      <div class="row card-footer">
        <div class="col-lg-12">
          <nav class="nav-tabs">
            <button type="button" class="btn btn-labeled btn-success" {{action "NewQuestion"}}>
          <span class="btn-label"><i class="glyphicon glyphicon-ok"></i></span>Submit</button>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
