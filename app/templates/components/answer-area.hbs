<div class="col-md-12">
  <div class="panel panel-card">
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-12">
          <a href="#" class="active" id="login-form-link">Usename: {{sesh.user}}</a>
      </div>
      </div>
      <hr>
    </div>
    <div class="form-group pull-right">
    <label for="happy" class="col-sm-4 col-md-4 control-label text-right">Autoclear</label>
    <div class="col-sm-7 col-md-7">
      <div class="input-group">
        <div id="radioBtn" class="btn-group">
          <a class="btn btn-primary ac-clear btn-sm active" data-toggle="happy" data-title="Y">YES</a>
          <a class="btn btn-primary ntac-clear btn-sm notActive" data-toggle="happy" data-title="N">NO</a>
        </div>
        <input type="hidden" name="happy" id="happy">
      </div>
    </div>
