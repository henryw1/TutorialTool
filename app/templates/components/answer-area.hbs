    <div class="panel-body">
      <div class="row">
        <div class="col-lg-12">
          {{ textarea name="answer" id="answer" class="form-control col-lg-12" value=answer placeholder="Type your answer to the above question and submit" namestyle="resize:vertical" rows="5" }}
